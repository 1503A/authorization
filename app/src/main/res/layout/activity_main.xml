<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rll"
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:background="#ffe44040">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:text="@string/app_name1"
            android:textColor="@color/colorAccent1"

            android:textSize="20sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rll"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="39dp"
        android:src="@mipmap/new_select" />

    <TextView
        android:id="@+id/apply"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_alignTop="@id/image1"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@id/image1"
        android:text="@string/app_name2" />


    <ImageView
        android:id="@+id/image2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image1"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="39dp"
        android:src="@mipmap/inbox_select" />

    <TextView
        android:id="@+id/commit"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_alignTop="@id/image2"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@id/image2"
        android:text="@string/app_name3" />

    <ImageView
        android:id="@+id/image3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="16dp"
        android:src="@mipmap/logout" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_alignTop="@id/image3"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@id/image3"
        android:text="@string/app_name4" />
</RelativeLayout>
