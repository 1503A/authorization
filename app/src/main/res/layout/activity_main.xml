<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/rll"
        android:layout_width="match_parent"
        android:background="#ffe44040"
        android:layout_height="172dp">
        <TextView
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:text="@string/app_name1"
            android:textColor="@color/colorAccent1"
            android:textSize="20sp"
            android:layout_alignParentBottom="true"

            android:layout_height="wrap_content" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/image1"
        android:layout_marginTop="39dp"
        android:layout_below="@id/rll"
        android:layout_marginLeft="16dp"
        android:src="@mipmap/new_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="32dp"
        android:layout_width="match_parent"
        android:text="@string/app_name2"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@id/image1"
        android:layout_alignTop="@id/image1"
        android:layout_height="24dp" />



    <ImageView
        android:id="@+id/image2"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/image1"
        android:layout_marginLeft="16dp"
        android:src="@mipmap/inbox_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="32dp"
        android:layout_width="match_parent"
        android:text="@string/app_name3"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@id/image2"
        android:layout_alignTop="@id/image2"
        android:layout_height="24dp" />
    <ImageView
        android:id="@+id/image3"
        android:layout_marginLeft="16dp"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/logout"
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="32dp"
        android:layout_width="match_parent"
        android:text="@string/app_name4"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@id/image3"
        android:layout_alignTop="@id/image3"
        android:layout_height="24dp" />
</RelativeLayout>
