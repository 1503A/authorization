<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nameText_Message_reject"
            style="@style/message_textview"
            android:text="张三" />

        <TextView
            android:id="@+id/idCardText_Message_reject"
            style="@style/message_textview"
            android:layout_weight="3"
            android:text="102223116551155674" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/stateText_Message_reject"
                style="@style/message_textview"
                android:text="驳回"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/Image_Message_reject"
                style="@style/message_img"
                android:src="@mipmap/rectangle" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:textColor="#EF000000"></View>

    <TextView
        android:id="@+id/rejectText_Message_reject"
        style="@style/message_error"
        android:text="人物或合影不符合规范,请重新上传" />
</LinearLayout>